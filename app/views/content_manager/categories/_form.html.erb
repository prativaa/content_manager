<div class="panel">
  <div class="panel-body">
    <div class="example-box-wrapper">
      <%= form_for @category, url: url_name, :html => {class: 'form-horizontal bordered-row'} do |f| %>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-8">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">URL Key</label>
          <div class="col-sm-8">
            <%= f.text_field :key, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Description</label>
          <div class="col-sm-8">
            <%= f.text_field :desc, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <p class="col-sm-12 text-center">
            <%= f.submit 'Submit', {class: 'btn btn-primary'} %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
